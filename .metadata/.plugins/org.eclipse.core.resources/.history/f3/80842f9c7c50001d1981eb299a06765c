package project2;

import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextArea;

public class GuiView extends JFrame {
	
	JFrame jframe;
	GridLayout layout;
	JPanel panel;
	
	UnsortedWordList unsortedL = new UnsortedWordList();
	SortedWordList sortedL = new SortedWordList();
	JTextArea jtext1 = new JTextArea("Displaying the unsorted linked list\n");
	
	public GuiView() {
		
	}
	
	public void populateUnsortedTextArea() {
		WordNode p = WordList.intNode;
		while (p.next != null) {
		    
			jtext1.append(p.next.data+"\n");
		    p = p.next;
		}
	}
	
	public void initiate() {
		jframe = new JFrame("Project 2-");
		
		jframe.setSize(700,600);
		jframe.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		jframe.setLocationRelativeTo(null);
		
		
		layout = new GridLayout();
		layout.setColumns(3);
		layout.setRows(1);
		
		
		
		panel = new JPanel(layout);
		
		
		populateUnsortedTextArea();
		
		panel.add(jtext1);
		panel.add(new JTextArea("Displaying TextArea 2"));
		panel.add(new JTextArea("Displaying TextArea 3"));
		
		
		unsortedL.printList();
		
		jframe.add(panel);
		jframe.setVisible(true);
	}
	

//	public static void main(String[] args) {
